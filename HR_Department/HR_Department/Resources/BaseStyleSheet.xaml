<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="padding1">
        <Setter Property="ItemsControl.Padding" Value="3"/>
    </Style>
    
    <Style TargetType="TextBox" BasedOn="{StaticResource padding1}"/>
    <Style TargetType="DatePicker" BasedOn="{StaticResource padding1}"/>
    <Style TargetType="ComboBox" BasedOn="{StaticResource padding1}"/>
    
    <Style x:Key="padding2">
        <Setter Property="ItemsControl.Padding" Value="5"/>
    </Style>

    <Style TargetType="MenuItem" BasedOn="{StaticResource padding2}"/>
    
    <Style TargetType="Button" BasedOn="{StaticResource padding2}">
        <Setter Property="Margin" Value="0, 5, 0, 0"/>
    </Style>   
</ResourceDictionary>